{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Construir Audio MTE",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe:${workspaceFolder}\\bin\\main.exe",
                "${workspaceFolder}\\src\\main.cpp",
                "${workspaceFolder}\\src\\modules\\audio_listener\\WasapiListener.cpp",
                "${workspaceFolder}\\src\\modules\\audio_analyzer\\AudioAnalyzer.cpp",
                "Ole32.lib",
                "User32.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}